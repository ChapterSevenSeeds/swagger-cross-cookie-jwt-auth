{
    "manifest_version": 3,
    "name": "Swagger Cross Site JWT",
    "version": "1.0",
    "description": "Reads an access token cookie from another site to automatically authorize Swagger.",
    "permissions": [
        "cookies",
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "action": {
        "default_icon": {
            "48": "icon2.png"
        }
    },
    "icons": {
        "16": "icon2.png",
        "48": "icon2.png",
        "128": "icon2.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "options_page": "options.html"
}